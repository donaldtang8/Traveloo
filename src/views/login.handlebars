<section>
<div class="page">
    <div id = "banner">
      <div id = "name">
          Login
      </div>

</div>
        <div class="login_form">
            <form id="Login" name="Login" method="POST">
            <ul>
                <li class="login-item">
                        <span>Username: </span>
                        <input type="text" id="username" name="username" class="login_input">
                        <span id="count-msg" class="error"></span>
                </li>
                <li class="login-item">
                    <span>Password: </span>
                    <input type="password" id="password" name="password" class="login_input">
                    <span id="password-msg" class="error"></span>
                </li>
                <li>
                    <span id = "button">
                        <button type="submit" id="login_buttion">Login</button>
                    </span>
                </li>
            </ul>
            </form>
        </div>

            {{#if hasErrors}}
            <ul class="error-list">
            {{#each errors}}
            <li>
            {{this}}
            </li>
            {{/each}}
            </ul>
            {{/if}}
        </div>
</section>